<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Retiros y Consignaciones</title>
    <link rel="stylesheet" href="css/estilos.css" type="text/css">
    <link rel="stylesheet" href="css/all.min.css" type="text/css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400&family=Roboto:wght@500&family=Ubuntu:wght@300&display=swap" rel="stylesheet">
    <link rel="shortcut icon" href="/Imagenes/favicon.ico" type="image/x-icon">
</head>
<body>
    <% if (login) { %>
    <header class="header">
        <div class="menu-princ contenedor">
            <a href="/logout" class="logout">Cerrar Sesión</a>
            <div class="btn-menu cont">
                <a href="#">
                    <i class="fas fa-user-circle"></i>
                </a>
            </div>
            <div class="usrn">
                <a href="/personal">
                    <p><%= name %></p>
                </a>
            </div>
        </div>
    </header>

    <section class="text">
        <div class="menuctx contenedor">
            <h2><i class="fas fa-address-book"></i>Página de Operaciones</h2>
            <p>Visualiza los movimientos crediticios globales</p>
        </div>
    </section>

    <section class="form">
        <div class="tabla0">
            <table class="tabla contenedor">
                <thead>
                    <tr>
                        <th>N.o</th>
                        <th>Código de Cuenta</th>
                        <th>Tipo de Cuenta</th>
                        <th>Operación</th>
                        <th>saldo Operado</th>
                        <th>Saldo Anterior</th>
                        <th>Saldo Actual</th>
                        <th>Fecha</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (data) { %>
                        <% for (var i = 0; i < data.length; i++) { %>
                            <tr>
                                <td><%= (i + 1) %></td>
                                <td><%= data[i].CodCuenta %></td>
                                <td><%= data[i].TipoCuenta %></td>
                                <td><%= data[i].Operacion %></td>
                                <td><%= data[i].OpDinero %></td>
                                <td><%= data[i].SalAnterior %></td>
                                <td><%= data[i].SalActual %></td>
                                <td><%= data[i].Fecha %></td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </section>

    <div class="cont-menu">
        <nav>
            <p><i class="fas fa-university"></i></p>
            <% if (loginad) { %>
                <a href="/usuarios">Usuarios</a>
            <% } %>
            <a href="/clientes">Clientes</a>
            <a href="/lineas">Líneas de Crédito</a>
            <a href="/creditos">Créditos</a>
            <a href="/cuentas">Cuentas</a>
            <a href="/operacionesemp">Operaciones</a>
            <% if (loginad) { %>
                <div class="copy2">
                    <p>Oceanic Bank</p>
                    <p>Copyright 2021</p>
                </div>
            <% } else { %>
                <div class="copy">
                    <p>Oceanic Bank</p>
                    <p>Copyright 2021</p>
                </div>
            <% } %>
        </nav>
    </div>
    <% } else { %>
        <h1><strong><%= name %></strong></h1>
        <a href="login" class="a-login">Ir al Login</a>
    <% } %>
</body>
</html>